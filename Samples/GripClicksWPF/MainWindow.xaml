<Window x:Class="GripClicksWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowState="Maximized" Loaded="MainWindowLoaded" Closing="MainWindowClosing">
    <Window.Resources>
        <Style TargetType="Rectangle">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="200" />
            <Setter Property="Margin" Value="20" />
        </Style>
    </Window.Resources>
    <Canvas x:Name="panel">
        <StackPanel Orientation="Horizontal" Canvas.Left="100" Canvas.Bottom="100">
            <Rectangle Fill="Green" />
            <Rectangle Fill="Blue" />
            <Rectangle Fill="Red" />
            <Rectangle Fill="Yellow" />
        </StackPanel>
    </Canvas>
</Window>